{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/types/global.d.ts", "./__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
